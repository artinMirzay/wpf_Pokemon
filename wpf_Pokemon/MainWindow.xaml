<Window x:Class="wpf_Pokemon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_Pokemon"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400">
    
    <Grid Margin="20" Background="AliceBlue">
        
        <!--ROWS-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!--Header-->
            <RowDefinition Height="2*"/> <!--Image-->
            <RowDefinition Height="Auto"/> <!--SubInfo-->
            <RowDefinition Height="*"/> <!--Move 1-->
            <RowDefinition Height="*"/> <!--Move 2-->
            <RowDefinition Height="Auto"/> <!--Stats-->
            <RowDefinition Height="Auto"/> <!--Footer-->
        </Grid.RowDefinitions>
        
        <!--COLUMNS-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <!--HEADER-->
        <Border Grid.Row="0" Grid.ColumnSpan="3" Margin="5" BorderBrush="black" BorderThickness="1">
            <TextBlock Text="HEADER" HorizontalAlignment="Center"/>
        </Border>
        
        <!--IMAGE-->
        <Border Grid.Row="1" Grid.ColumnSpan="3" Margin="5" BorderBrush="Gray" BorderThickness="2">
            <Rectangle Width="200" Height="200" Fill="LightGray" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
        
        <!--SUBINFO-->
        <Border Grid.Row="2" Grid.ColumnSpan="3" Margin="5" BorderBrush="Black" BorderThickness="1">
            <TextBlock Text="SUBINFO" HorizontalAlignment="Center"/>
        </Border>
        
        
        <!--MOVE 1-->
        <Border Grid.Row="3" Grid.ColumnSpan="3" Margin="5" BorderBrush="Black" BorderThickness="1">
            <TextBlock Text="MOVE 1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        
        <!--MOVE 2-->
        <Border Grid.Row="4" Grid.ColumnSpan="3" Margin="5" BorderBrush="Black" BorderThickness="1">
            <TextBlock Text="MOVE 2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>


        <!--STATS-->
        <Border Grid.Row="5" Grid.ColumnSpan="3" Margin="5" BorderBrush="Black" BorderThickness="1">
            <TextBlock Text="STATS" HorizontalAlignment="Center"/>
        </Border>
        
        <!--FOOTER-->
        <Border Grid.Row="6" Grid.ColumnSpan="3" Margin="5" BorderBrush="Black" BorderThickness="1">
            <TextBlock Text="FOOTER" HorizontalAlignment="Center"/>
        </Border>

    </Grid>
    
</Window>
