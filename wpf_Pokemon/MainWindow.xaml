<Window x:Class="wpf_Pokemon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_Pokemon"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400">
    
    <Grid Margin="20" Background="AliceBlue">
        
        <!--ROWS-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!--Header-->
            <RowDefinition Height="2*"/> <!--Image-->
            <RowDefinition Height="Auto"/> <!--SubInfo-->
            <RowDefinition Height="*"/> <!--Move 1-->
            <RowDefinition Height="*"/> <!--Move 2-->
            <RowDefinition Height="Auto"/> <!--Stats-->
            <RowDefinition Height="Auto"/> <!--Footer-->
        </Grid.RowDefinitions>
        
        <!--COLUMNS-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!--HEADER-->
        <Grid Grid.Row="0" Grid.ColumnSpan="3" Margin="5, 5, 5, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/> <!--BASIC-->
                <ColumnDefinition Width="*"/> <!--NAME-->
                <ColumnDefinition Width="Auto"/> <!--HP-->
            </Grid.ColumnDefinitions>
            
            <!--BASIC-->
            <Border Grid.Column="0" Background="WhiteSmoke" BorderBrush="Black" BorderThickness="1" CornerRadius="5" Padding="3,1" VerticalAlignment="Center" Margin="0,0,10,0">
                <TextBlock Text="BASIC" FontWeight="Bold" FontSize="10" VerticalAlignment="Center"/>
            </Border>

            <!--NAME-->
            <Border Grid.Column="1" Margin="2" Padding="5">
                <TextBlock Grid.Column="1" Text="Staryu" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
            </Border>

            <!--HP-->
            <Border Grid.Column="2"  Margin="2" Padding="5">
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="HP" FontSize="14" VerticalAlignment="Center" Margin="0,0,3,0"/>
                    <TextBlock Text="60" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <Image Width="24" Height="24" Source="pictures\HNv9RZi.png"/> <!--Element-->
                </StackPanel>
            </Border>
            
        </Grid>

        <!--IMAGE-->
        <Border Grid.Row="1" Grid.ColumnSpan="3" Margin="5, 5, 5, 0" BorderBrush="Black" BorderThickness="1,1,1,0">
            <Image Source="pictures\staryu.jpg" Stretch="UniformToFill"/>
        </Border>

        <!--SUBINFO-->
        <Border Grid.Row="2" Grid.ColumnSpan="3" Margin="5, 0, 5, 5" Padding="3" Background="#FFEFEFEF"  BorderBrush="Black" BorderThickness="1,0,1,1">
            <TextBlock Text="NO. 0120 Star Shape Pokémon HT: 2'7'' WT: 76.1 lbs." FontSize="11" Foreground="Gray" TextAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        
        <!--ATTACK SECTION-->
        <Grid Grid.Row="3" Grid.ColumnSpan="3" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!--ATTACK HEADER-->
                <RowDefinition Height="Auto"/> <!--ATTACK DESC-->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/> <!--ELEMENT ICON-->
                <ColumnDefinition Width="*"/> <!--NAME-->
                <ColumnDefinition Width="Auto"/> <!--DAMAGE-->
            </Grid.ColumnDefinitions>

            <!--HEADER-->
            <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="1" Padding="5" Margin="2">
                <StackPanel Orientation="Horizontal">
                    <Image Width="20" Source="C:\Users\Artin\source\repos\wpf_Pokemon\wpf_Pokemon\pictures\uGgzRK6.png"/>
                <Image Width="20" Source="C:\Users\Artin\source\repos\wpf_Pokemon\wpf_Pokemon\pictures\HNv9RZi.png"/>
                </StackPanel>
            </Border>
            
            <!--ATK NAME-->
            <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="1" Padding="5" Margin="2">
                <TextBlock Text="Swift" TextAlignment="Center" Margin="0,0,50,0"/>
            </Border>
            
            <!--DMG-->
            <Border Grid.Row="0" Grid.Column="2" BorderBrush="Black" BorderThickness="1" Padding="5" Margin="2">
                <TextBlock Text="30" TextAlignment="Center" />
            </Border>
            
            <!--ATK DESC-->
            <Border Grid.Row="1" Grid.ColumnSpan="3" BorderBrush="Black" BorderThickness="1" Padding="5" Margin="1">
                <TextBlock Text="This attack's damage isn't affected by Weakness or Resistance, or by any effects on your opponent's Active Pokémon." TextWrapping="Wrap"/>
            </Border>
        </Grid>
        
        <!--ATTACK 2-->
        <Grid Grid.Row="4" Grid.ColumnSpan="3" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                 <RowDefinition Height="Auto"/>
             </Grid.RowDefinitions>

             <Grid.ColumnDefinitions>
                 <ColumnDefinition Width="Auto"/>
                 <ColumnDefinition Width="*"/>
                 <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>

             <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="1" Padding="5" Margin="2">
                <Image Width="20" Source="C:\Users\Artin\source\repos\wpf_Pokemon\wpf_Pokemon\pictures\HNv9RZi.png"/>
            </Border>

             <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="1" Padding="5" Margin="2">
                <TextBlock Text="Swift" TextAlignment="Center" Margin="0,0,50,0"/>
             </Border>

             <Border Grid.Row="0" Grid.Column="2" BorderBrush="Black" BorderThickness="1" Padding="5" Margin="2">
                 <TextBlock Text="30" TextAlignment="Center"/>
             </Border>

            <Border Grid.Row="1" Grid.ColumnSpan="3" BorderBrush="Black" BorderThickness="1" Padding="5" Margin="1">
                <TextBlock Text="This attack's damage isn't affected by Weakness or Resistance, or by any effects on your opponent's Active Pokémon." TextWrapping="Wrap"/>
            </Border>


        </Grid>
        
        <!--STATS-->
        <Grid Grid.Row="5" Grid.ColumnSpan="3" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" Padding="5" Margin="2">
                <TextBlock Text="Weakness"/>
            </Border>

            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1" Padding="5" Margin="2">
                <TextBlock Text="Resistance"/>
            </Border>

            <Border Grid.Column="2" BorderBrush="Black" BorderThickness="1" Padding="5" Margin="2">
                <TextBlock Text="Retreat"/>
            </Border>
        </Grid>
        
        <!--FOOTER-->
        <Grid Grid.Row="6" Grid.ColumnSpan="3" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" Padding="5" Margin="2">
                <TextBlock Text="# / SET"/>
            </Border>

            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1" Padding="5" Margin="2">
                <TextBlock Text="COPYWRIGHT"/>
            </Border>

            <Border Grid.Column="2" BorderBrush="Black" BorderThickness="1" Padding="5" Margin="2">
                <TextBlock Text="BABOSKHASDJAa nice bajs lice" TextWrapping="Wrap"/>
            </Border>
            
            
            
        </Grid>
        
        
    </Grid>
    
    
    
    
</Window>
