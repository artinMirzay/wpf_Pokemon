<Window x:Class="wpf_Pokemon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="650" Width="420" Background="Transparent"
        FontFamily="Gill Sans">
    <Window.Resources>
        <LinearGradientBrush x:Key="CardGradientBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#B3E5FC" Offset="0"/>
            <GradientStop Color="#0288D1" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="BasicBadgeBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#E0E0E0" Offset="0"/>
            <GradientStop Color="#B0B0B0" Offset="0.5"/>
            <GradientStop Color="#F5F5F5" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="BorderBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F5F5F5" Offset="0"/>
            <GradientStop Color="#D1D5DB" Offset="0.3"/>
            <GradientStop Color="#B0B0B0" Offset="0.6"/>
            <GradientStop Color="#A3B4C4" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="AtkBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#E1F5FE" Offset="0"/>
            <GradientStop Color="#4FC3F7" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>
    <Border CornerRadius="20" BorderBrush="{StaticResource BorderBrush}" BorderThickness="20" Background="{StaticResource CardGradientBrush}" Padding="8">
        <Grid>
            <!-- ROWS -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="2*"/>
                <!-- Image -->
                <RowDefinition Height="Auto"/>
                <!-- SubInfo -->
                <RowDefinition Height="2*"/>
                <!-- Attacks -->
                <RowDefinition Height="Auto"/>
                <!-- Stats -->
                <RowDefinition Height="Auto"/>
                <!-- Footer -->
                <RowDefinition Height="Auto"/>
                <!-- Copyright -->
            </Grid.RowDefinitions>
            <!-- COLUMNS -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="90*"/>
                <ColumnDefinition Width="11*"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="13*"/>
                <ColumnDefinition Width="52*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- HEADER -->
            <Border Grid.Row="0" Grid.ColumnSpan="6" CornerRadius="10,10,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!-- BASIC -->
                    <Grid Grid.Column="0" Margin="-12,-10,10,0" VerticalAlignment="Top">
                        <!-- Metallic gradient background -->
                        <Border Width="70" Height="28" CornerRadius="14" Background="{StaticResource BasicBadgeBrush}" BorderBrush="#AAA" BorderThickness="2" Margin="0,0,5,7">
                            <TextBlock Text="BASIC" FontWeight="Bold" FontSize="14" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <!-- Right tab effect using Path -->
                        <Path Stroke="#AAA" StrokeThickness="2" Fill="{StaticResource BasicBadgeBrush}" Data="M70,0 Q80,14 70,28" Width="12" Height="28" HorizontalAlignment="Right"/>
                    </Grid>
                    <!-- NAME -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Staryu" FontWeight="Bold" FontSize="24" VerticalAlignment="Center" Foreground="Black"/>
                    </StackPanel>
                    <!-- HP and Element -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="HP" FontSize="10" FontWeight="Bold" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                        <TextBlock Text="60" FontSize="33" FontWeight="Bold" VerticalAlignment="Bottom" Height="32"/>
                        <Image Width="35" Height="35" Source="pictures/HNv9RZi.png"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- IMAGE -->
            <Border Grid.Row="1" Grid.ColumnSpan="6" Margin="12,2,12,2" BorderBrush="{StaticResource BorderBrush}" BorderThickness="2,2,2,0" CornerRadius="1">
                <Image Source="pictures/staryu.jpg" Stretch="UniformToFill"/>
            </Border>

            <!-- SUBINFO -->
            <Border Grid.Row="2" Grid.ColumnSpan="6" Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="5" CornerRadius="5">
                <TextBlock Text="NO. 0120 Star Shape Pokémon HT: 2'7'' WT: 76.1 lbs." FontSize="10" Foreground="Black" TextAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <!-- ATTACKS SECTION -->
            <Border Grid.Row="3" Grid.ColumnSpan="6" Margin="6,14,3,6" Background="{StaticResource AtkBrush}" BorderBrush="#B0C4DE" BorderThickness="2,0,0,0" CornerRadius="2" Padding="10">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <!-- ATTACK 1 -->
                    <Grid Margin="2" Width="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="0,0,10,0">
                            <Image Width="20" Source="pictures/HNv9RZi.png"/>
                            <Image Width="20" Source="pictures/uGgzRK6.png"/>
                        </StackPanel>
                        <TextBlock Grid.Column="1" Text="Swift" FontWeight="Bold" FontSize="20" Margin="40,0,0,0" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="30" FontWeight="Bold" FontSize="20" VerticalAlignment="Center"/>
                    </Grid>
                    <TextBlock Text="This attack's damage isn't affected by Weakness or Resistance, or by any effects on your opponent's Active Pokémon." 
                   TextWrapping="Wrap" Margin="10,0,10,5" FontSize="13" Width="300"/>
                    <!-- ATTACK 2 (optional, uncomment if needed)
        <Grid Margin="2" Width="300">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="0,0,10,0">
                <Image Width="20" Source="pictures/HNv9RZi.png"/>
            </StackPanel>
            <TextBlock Grid.Column="1" Text="Tackle" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="2" Text="10" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
        </Grid>
        <TextBlock Text="A basic attack." TextWrapping="Wrap" Margin="10,0,10,5" FontSize="13" Width="300"/>
        -->
                </StackPanel>
            </Border>


            <!--STATS-->
            <Border Grid.Row="5" Grid.ColumnSpan="6" Margin="0,7,0,54" BorderBrush="#B0C4DE" BorderThickness="0,1,0,1" CornerRadius="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <!-- Weakness -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0,0,0">
                        <TextBlock Text="weakness" FontWeight="Bold" FontSize="12" Foreground="Black"/>
                        <Image Width="16" Height="16" Source="/pictures/fBKUHcT.png" Margin="4,0"/>
                        <TextBlock Text="×2" FontWeight="Bold" FontSize="12" Foreground="Black" Margin="4,0"/>
                    </StackPanel>
                    <!-- Resistance -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,0">
                        <TextBlock Text="resistance" FontWeight="Bold" FontSize="12" Foreground="Black"/>
                    </StackPanel>
                    <!-- Retreat -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                        <TextBlock Text="retreat" FontWeight="Bold" FontSize="12" Foreground="Black"/>
                        <Image Width="16" Height="16" Source="/pictures/HNv9RZi.png" Margin="4,0"/>
                    </StackPanel>


                    <!-- Top Divider -->
                    <Rectangle Grid.ColumnSpan="3" Height="2.5" Fill="{StaticResource BasicBadgeBrush}" VerticalAlignment="Top"/>
                    <!-- Bottom Divider -->
                    <Rectangle Grid.ColumnSpan="3" Height="2.5" Fill="{StaticResource BasicBadgeBrush}" VerticalAlignment="Bottom"/>
                    <!-- Vertical Divider between Weakness and Resistance -->
                    <Rectangle Grid.Column="1" Width="2" Height="15" Fill="{StaticResource BasicBadgeBrush}" HorizontalAlignment="Left" Margin="-12,6,0,6"/>
                </Grid>
            </Border>

            <!--FOOTER-->
            <Border Grid.Row="5" Grid.ColumnSpan="6" CornerRadius="0,0,10,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Bottom">
                        <TextBlock Text="Illus. Arai Kiriko" FontSize="10" Foreground="Black"/>
                        <StackPanel Orientation="Horizontal">
                            <Border Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="4" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="1,2,1,0" Margin="0,0,2,0">
                                <TextBlock Text="G" FontSize="12" FontWeight="Bold" Foreground="Black"/>
                            </Border>
                            <Border Background="Black" BorderBrush="Black" BorderThickness="1" CornerRadius="4" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="1,2,1,0" Margin="0,0,2,0">
                                <TextBlock Text="MEWᴇɴ" FontSize="12" FontWeight="Bold" Foreground="white"/>
                            </Border>
                            <TextBlock Text="120/165" FontSize="11" FontWeight="Bold" Foreground="Black" Height="11" FontStyle="Italic"/>
                            <TextBlock Text="●" FontSize="18" FontWeight="Bold" Foreground="Black" Height="22" FontStyle="Italic"/>
                        </StackPanel>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Text="Fish Pokémon nibble at it, but Staryu isn't bothered. Its body regenerates quickly, even if part of it is completely torn off." FontSize="10" Foreground="Black" VerticalAlignment="Bottom" HorizontalAlignment="Right" TextWrapping="Wrap"/>
                </Grid>
            </Border>
        </Grid>
    </Border>



</Window>
